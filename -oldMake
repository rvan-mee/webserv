NAME		= little_server
OBJ			= littlewebserver
OBJS		= $(addsuffix .o, ${OBJ})
CXX			= c++
RM			= rm -f
HEADER		= -I .
CFLAGS		= -Wall -Wextra -Werror -std=c++98 #-g -fsanitize=address

all:		$(NAME)

%.o:	%.cpp
				$(CXX) $(CFLAGS) $(HEADER) -c -o $@ $<

clean:
				@$(RM) $(OBJS)

fclean:		clean
				@$(RM) $(NAME)

re:			fclean all

$(NAME):	$(OBJS)
				$(CXX) $(CFLAGS) $(OBJS) -o $@

.PHONY: all clean fclean re cleanft
